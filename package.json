{
	"name": "cerberus-x",
	"displayName": "Cerberus X",
	"description": "Support for the language Cerberus X",
	"version": "0.1.1",
	"publisher": "ZimaTechGmbH",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cerberus-x.helloWorld",
		"onCommand:cerberus-x.showDocumentation",
		"onLanguage:cerberus-x"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "cerberus-x",
				"extensions": [
					".cxs"
				],
				"aliases": [
					"Cerberus X"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "cerberus-x",
				"scopeName": "source.cxs",
				"path": "./syntaxes/cerberus.json"
			}
		],
		"commands": [
			{
				"category": "Cerberus X",
				"title": "Rebuild documentation",
				"command": "cerberus-x.buildDocumentation"
			},
			{
				"category": "Cerberus X",
				"title": "Show Cerberus X Documentation",
				"command": "cerberus-x.showDocumentation"
			},
			{
				"category": "Cerberus X",
				"title": "Build as HTML5 application",
				"command": "cerberus-x.buildHtml"
			},
			{
				"category": "Cerberus X",
				"title": "Run as HTML5 application",
				"command": "cerberus-x.runHtml"
			}
		],
		"taskDefinitions": [
			{
				"type": "makedocs",
				"properties": {}
			}
		],
		"configuration": {
			"title": "Cerberus X",
			"properties": {
				"cerberusX.path": {
					"type": "string",
					"default": "",
					"description": "Path to your Cerberus X installation."
				},
				"cerberusX.buildFile": {
					"type": "string",
					"default": "",
					"description": "Entry point file for your project."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.52",
		"@types/vscode": "^1.56.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.7",
		"mocha": "^7.1.2",
		"typescript": "^3.9.9",
		"vscode-test": "^1.5.2"
	}
}
