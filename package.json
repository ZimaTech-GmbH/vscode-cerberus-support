{
	"name": "cerberus-x",
	"displayName": "Cerberus X",
	"description": "Support for the language Cerberus X",
	"version": "0.1.2",
	"publisher": "ZimaTechGmbH",
	"repository": {
		"type": "git",
		"url": "https://github.com/ZimaTech-GmbH/vscode-cerberus-support.git"
	},
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cerberus-x.helloWorld",
		"onCommand:cerberus-x.showDocumentation",
		"onLanguage:cerberus-x"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "cerberus-x",
				"extensions": [
					".cxs"
				],
				"aliases": [
					"Cerberus X"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "cerberus-x",
				"scopeName": "source.cxs",
				"path": "./syntaxes/cerberus.json"
			}
		],
		"commands": [
			{
				"category": "Cerberus X",
				"title": "Rebuild documentation",
				"command": "cerberus-x.buildDocumentation"
			},
			{
				"category": "Cerberus X",
				"title": "Show Cerberus X documentation",
				"command": "cerberus-x.showDocumentation"
			},
			{
				"category": "Cerberus X",
				"title": "Build as HTML5 application",
				"command": "cerberus-x.buildHtml"
			},
			{
				"category": "Cerberus X",
				"title": "Run as HTML5 application",
				"command": "cerberus-x.runHtml"
			}
		],
		"taskDefinitions": [
			{
				"type": "makedocs",
				"properties": {}
			}
		],
		"keybindings": [
			{
				"command": "cerberus-x.runHtml",
				"key": "f5",
				"when": "resourceLangId == cerberus-x"
			},
			{
				"command": "cerberus-x.buildHtml",
				"key": "f6",
				"when": "resourceLangId == cerberus-x"
			},
			{
				"command": "cerberus-x.showDocumentation",
				"key": "f1",
				"when": "editorLangId == cerberus-x",
				"args": {
					"autolocate": "curpos"
				}
			}
		],
		"configuration": {
			"title": "Cerberus X",
			"properties": {
				"cerberusX.path": {
					"type": "string",
					"default": "",
					"description": "Path to your Cerberus X installation."
				},
				"cerberusX.buildFile": {
					"type": "string",
					"default": "",
					"description": "Entry point file for your project."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.x",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"@zimatech/zdoccer": "^1.4.0",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5"
	}
}
